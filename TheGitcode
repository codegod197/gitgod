import java.util.Scanner;

public class Triangle3 {

    public static void main(String[] args)
    	{
    Scanner scan = new Scanner(System.in);
    int numRows;
    int stars;
    int rows;
    int spaces;


    System.out.print("How many rows?");
    numRows = scan.nextInt();



    rows = 1;




    while (rows <= numRows)
    {


      spaces = (numRows-1);


        while (spaces >= rows)
        {
          System.out.print(" ");
          spaces--;

        }
        stars=1;
        while (stars <= rows)
        {
       	      System.out.print("*");

              stars++;

       }
         System.out.println();
         rows++;






       }


    }


}
